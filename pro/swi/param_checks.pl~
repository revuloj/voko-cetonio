/* -*- Mode: Prolog -*- */

:- use_module(library(dcg/basics)).

email(Email) --> whites, "<", !, email_(Email), ">", whites.
email(Email) --> whites, email_(Email), whites.

email_ws_left([C|Rest],Email) :- code_type(C,white), email_ws_left(Rest,Email).
email_ws_left(Rest,Email) :- email_lt_left(Rest,Email).
email_ws_left(Rest,Email) :- email_part_left(Rest,Email).
email_lt_left([0'<|Rest],Email) :- email_part_left(Rest,Email).

email_part_left([C|Rest],[C|MRest]) :- code_type(C,

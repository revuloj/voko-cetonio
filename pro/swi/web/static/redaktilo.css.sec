#kontroli_eraroj {
    border-bottom: 1px solid #7f2f2f;
    margin: 0;
    background: #ffedad;
    color: #7f2f2f;
    //overflow: auto;
}

#kontroli_vortoj {
    border-bottom: 1px solid #7f2f2f;
    margin: 0;
    background: #fff5b5;
    color: #7f2f2f;
    //overflow: auto;
}

#kontroli_eraroj ul, #kontroli_vortoj ul {
    margin: 0;
    padding-left: 0.4em;
}

#kontroli_eraroj li, #kontroli_vortoj_list li {
    list-style-type: none;
    font-size: 80%;
    padding: .1em;
    border-top: 1px solid #e3a345;
    //margin-left: 10em;
}

#kontroli_eraroj li:hover, #kontroli_vortoj_list li:hover {
    background-color: #e5e3d5; 
}

#kontroli_eraroj li:active, #kontroli_vortoj_list li:active {
    background-color: #c5c3b5; 
    color: white;
}

#kontroli_eraroj li::before, #kontroli_vortoj_list li::before {
    content: attr(value) ": ";
    font-weight: bold
}


#elekto_indikoj {
    max-height: 27ex;
    overflow: auto;
  
    margin: 1px;
    padding: 0px;
    // forigu spacon inter linioj uzante inline-block
    font-size: 0;
    line-height: 0;
}

#elekto_indikoj div {
    display: inline-block; //float; //inline-block; inline-block aldonas spaceton inter la linioj
    float: left;
    height: 3em;
    max-height: 3em;
    width: 4em;
    overflow: hidden;
    border: 1px solid #e3a345;
    border-radius: 4px;
    padding: 0.1em;
    margin: 0;
    //font-size: 70%;
    font-size: small;
    line-height: 1em;
    text-align: center;
}

#elekto_indikoj .stl {
  font-stretch: condensed;
  background-color: #e5e3c5;  
}

#elekto_indikoj .fak {
  background-color: #d5e3d5;  
}

#elekto_indikoj .ofc {
  background-color: #d5d3e5;  
}

#elekto_indikoj .gra {
  background-color: #e5d3e5;  
}


#elekto_indikoj div:hover {
   background-color: #f5f3e5; 
   cursor: pointer
}

#elekto_indikoj div:active {
   background-color: #c5c3b5; 
   color: white;  
   cursor: pointer
}

#elekto_indikoj div span {
    line-height: 1.5em
}


#elekto_indikoj img {
    height: 1.7em;
    max-height: 1.7em;
    overflow: hidden;
}


html {
    height: 100%
}

body {
    // la artikolo.css de la antaurigardo shanghus la atributojn, 
    // tial uzi !important
    padding: 0 !important;
    margin: 0 !important;
    height: 100% !important;
    overflow: hidden !important;

    font-family: segoe ui,Arial,sans-serif;
    font-size: 1.1em;
    
    display: flex;
    -webkit-display: flex;
}

.ui-dialog {
    max-height: 95% !important;
    overflow: auto !important;
}

.ui-tooltip {
    max-width: 30em;
}
   

@media only screen and (max-width: 768px) {
    .ui-menu-item {
        font-size: 120% !important;
    }
    .ui-dialog {
        max-width: 95% !important;
        max-height: 95% !important;
        overflow: auto !important;
    }
    #positions {
        font-size: 100% !important;
        overflow-x: visible
    }
    #xml_text {
        font-size: 110%
    }
}

@media only screen and (max-width: 450px) {
    #sidebar {
        width: 30% !important;
    }
    .ui-dialog {
        max-width: 95% !important;
        max-height: 95% !important;
        overflow: auto !important;
    }    
    .ui-menu-item {
        font-size: 100% !important;
    }
    #positions {
        font-size: 90% !important;
        overflow-x: visible
    }
    #xml_text {
        font-size: 110%
    }
}

textarea {
    resize: none;
    overflow: auto;
}

fieldset {
    border: 1px solid #327e04;
}

dd {
    margin-top: 0.1em;
    margin-bottom: 0.2em;
